<%- include('./components/headerLogged') %>   
  <body>

    <section class="crear_mazo">
      <form action="/mazos" method="POST">
        <h1>Crear nuevo mazo</h1>
        <div>
          <label for="nombre">Nombre:</label>
          <input class="nombre_mazo" id="nombre" name="nombre" required>
        </div>
        <div>
          <label for="tipo_mazo">Tipo:</label>
          <select id="tipo_mazo" name="tipo_mazo" required>
            <option value="1">Mazo Privado</option>
            <option value="2">Mazo Publico</option>
          </select>
        </div>
        <button type="submit" id="crear_mazo">Crear mazo</button>
        <a href="/lista_mazos">Mazos Creados</a>

      </form>
    </section>
  </body>
</html>