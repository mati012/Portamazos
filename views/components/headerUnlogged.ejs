            color: #00a0e9;
        }

        nav .active {
            color: #00a0e9;
        }

        .dropdown {
            position: relative;
        }

        .dropdown .submenu {
            display: none;
            position: absolute;
            min-width: 100px;
            background-color: #fff;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            padding: 12px 16px;
            z-index: 1;
        }

        .dropdown:hover .submenu {
            display: block;
        }
    </style>
