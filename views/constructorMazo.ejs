<%- include('./components/headerLogged') %>
<script>
  function cerrarMensajeExito() {
    var mensajeExito = document.getElementById('mensaje-exito');
    mensajeExito.style.opacity = '0'; // Establecer la opacidad a 0
    mensajeExito.style.transform = 'translateX(100%)'; // Deslizar hacia la derecha
    setTimeout(function () {
      mensajeExito.style.display = 'none'; // Ocultar el mensaje después de la transición
    }, 500); // Esperar 500 milisegundos antes de ocultar el mensaje
  }
  setTimeout(cerrarMensajeExito, 3000);


  function cerrarMensajeError() {
    var mensajeError = document.getElementById('mensaje-error');
    mensajeError.style.opacity = '0'; // Establecer la opacidad a 0
    mensajeError.style.transform = 'translateX(100%)'; // Deslizar hacia la derecha
    setTimeout(function () {
      mensajeError.style.display = 'none'; // Ocultar el mensaje después de la transición
    }, 500); // Esperar 500 milisegundos antes de ocultar el mensaje
  }

  // Ocultar el mensaje de error después de 6 segundos
  setTimeout(cerrarMensajeError, 5000);
  
</script>
