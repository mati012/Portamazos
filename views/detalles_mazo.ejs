<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Detalles del mazo</title>
    <link rel="stylesheet" href="/css/estilos.css">
  </head>
  <body>
    <div class="container">
      <h1>Detalles del mazo</h1>
      <div>
        <strong>Nombre:</strong> <%= mazo.nombre %>
      </div>
      <div>
        <strong>Tipo:</strong> <%= mazo.tipo === 1 ? 'Mazo de construcción' : 'Mazo preconstruido' %>
      </div>
      <div>
        <strong>Jugador:</strong> <%= mazo.jugador.nombre %>
      </div>
      <div class="cards-container">
        <% mazo.cartas.forEach(function(carta) { %>
          <div class="card">
            <div class="card-img">
              <img src="<%= carta.imagen %>" alt="<%= carta.nombre %>">
            </div>
            <div class="card-details">
              <h2><%= carta.nombre %></h2>
              <ul>
                <li><strong>Código:</strong> <%= carta.codigo %></li>
                <li><strong>Tipo:</strong> <%= carta.tipo %></li>
                <li><strong>Coste:</strong> <%= carta.coste %></li>
                <li><strong>Habilidad:</strong> <%= carta.habilidad %></li>
                <li><strong>Fuerza:</strong> <%= carta.fuerza %></li>
                <li><strong>Raza:</strong> <%= carta.raza %></li>
              </ul>
            </div>
          </div>
        <% }); %>
      </div>
      <div>
        <a href="/">Volver al listado de mazos</a>
      </div>
    </div>
  </body>
</html>