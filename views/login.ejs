    <h1>Iniciar sesion</h1>

    <ul>
      <% if(messages.success_msg) { %>
      <li><%= messages.success_msg %></li>
      <% } %>
    </ul>
 

    <ul>
      <% if (messages.error) { %>
      <li><%= messages.error %></li>
      <% } %>
    </ul>




    <form action="/login" method="POST">
 
    <div>
      <svg class="logo"  width="10 0" height="30" viewbox="0 0 640 480"  >
     
      </svg>
      <div class="email">
        <label for="email">Usuario</label>
        <div class="sec-2">
          <ion-icon name="mail-outline"></ion-icon>
          <input id="email" type="email" name="email" placeholder="Usuario@gmail.com" required/>
        </div>
      </div>
     <div class="password">
      <label for="password">Clave</label>
      <div class="sec-2">
        <ion-icon name="lock-closed-outline"></ion-icon>
        <input id="contrasena" type="password" name="password" placeholder="············" required />
        <ion-icon class="show-hide" name="eye-outline"></ion-icon>
      </div>
    </div>

    <div>
        <input type="submit"    value="Login">
    </div>   
    <a href="/registro">Registrarse</a>
  </div>
    </form>

  
