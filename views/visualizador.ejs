        <label for="coste">Coste:</label>
        <input type="number" id="coste" name="coste" min="0" max="5">
      </div>
      <div class="form-group">
        <label for="fuerza">Fuerza:</label>
        <input type="number" id="fuerza" name="fuerza"  min="0" max="10">
      </div>
